@model JABlog.Models.Comentario

@{
    ViewBag.Title = "Create";
}


<div class="container">
    <div class="panel">
        <br />
        <h1 style="text-align:center;">
            Crear el Comentario
        </h1>
        <br />
    </div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Blog</legend>
        <div class="input-group hidden">
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
            <input type="text" name="Name" id="Name" class="form-control input-lg" placeholder="Usuario" value="1"  required/>
		</div>
        <div class="input-group hidden">
            <span class="input-group-addon"><span class="glyphicon glyphicon-bookmark"></span></span>
            <input type="text" name="Bio" id="Bio" class="form-control input-lg" placeholder="Noticia" value="1" required/>
		</div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Comentarios)
        </div>
        <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-edit"></span></span>
            <input type="text" name="Comentarios" id="Comentarios" class="form-control input-lg" placeholder="Comentarios" required/>
		</div>
        <br />
        <div class="col-md-14">
            <input type="submit" class="btn btn-lg btn-success btn-block" value="Crear">
        </div>
    </fieldset>
}

    <br />
<ul class="nav nav-pills nav-justified" style="margin-bottom:2%">
    <li data-slide-to="0" class="active">@Html.ActionLink("Volver a la lista", "Index")</li> 
</ul>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
